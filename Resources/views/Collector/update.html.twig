{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        <img width="20" height="28" alt="API" src="data:image/png;base64," />
        <span class="sf-toolbar-status{% if collector.updateCount > 0 %} sf-toolbar-status-red{% endif %}">{{ collector.updateCount }}</span>
    {% endset %}
    {% set text %}
        <div class="sf-toolbar-info-piece">
            <b>Software Updates</b>
            <span>{{ collector.updateCount }}</span>
        </div>
    {% endset %}
    {% include 'WebProfilerBundle:Profiler:toolbar_item.html.twig' with { 'link': profiler_url } %}
{% endblock %}

{% block menu %}
<span class="label">
    <span class="icon">
      <span style="display:block; float: left; background-color: #3F3F3F; color: #F7F7F7; font-family: sans-serif; font-size: 15px; padding: 4px 4px 3px 4px; margin: 3px 15px;">Upd</span>
    </span>
    <strong>UPDATES</strong>
    <span class="count">
        <span>{{ collector.updateCount }}</span>
    </span>
</span>
{% endblock %}

{% block panel %}
    <h2>Software Updates</h2>

    <table>
    <thead><tr><th>Name</th><th>Required</th><th>Version</th><th>Description</th></tr></thead>
    <tbody>
    {% for i, packages in collector.packages %}
        <tr>
            <td>{{ packages.name }}</td>
            <td>{{ packages.required }}</td>
            <td>{{ packages.version }}</td>
            <td>{{ packages.description }}</td>
        </tr>
    {% endfor %}
    </tr></tbody></table>

    <iframe src="{{ asset('bundles/lswautomaticupdate/update.php') }}" style="width:100%;height: 400px;border: 0">
    </iframe>

{% endblock %}